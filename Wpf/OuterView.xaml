<UserControl
    x:Class="Wpf.OuterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdxam="clr-namespace:MdXaml;assembly=MdXaml"
    xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
    d:DataContext="{d:DesignInstance {x:Type vm:OuterViewModel},
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*"
                MinWidth="200"
                MaxWidth="300" />
            <ColumnDefinition Width="3*" MinWidth="200" />
            <ColumnDefinition Width="5*" MinWidth="200" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--  ServerID  -->
            <DockPanel Grid.Row="0">
                <TextBlock Margin="5" DockPanel.Dock="Left">Server ID</TextBlock>
                <TextBox
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Center"
                    DockPanel.Dock="Right"
                    Text="{Binding ServerID, Mode=TwoWay}" />
            </DockPanel>

            <!--  ChannelList  -->
            <ItemsControl
                Grid.Row="1"
                BorderBrush="LightGray"
                BorderThickness="1"
                ItemsSource="{Binding ChannelList}">

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,2"
                            Background="LightGray"
                            CornerRadius="4">
                            <CheckBox
                                Grid.Column="1"
                                Margin="5"
                                VerticalAlignment="Center"
                                Content="{Binding Name, Mode=OneWay}"
                                FlowDirection="LeftToRight"
                                IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <Grid Grid.Column="1" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.ColumnSpan="2" Style="{StaticResource HeaderStyle}">
                    Request
                </TextBlock>
                <TextBox
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Text="{Binding RequestMessage}"
                    TextWrapping="Wrap" />
                <Button
                    Grid.Row="2"
                    Grid.Column="0"
                    Height="30"
                    Command="{Binding SendRequestCommand}">
                    Send Request
                </Button>
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Height="30"
                    Command="{Binding ClearRequestCommand}">
                    Clear Request
                </Button>
            </Grid>
        </Grid>
        <!--  Ausgabe  -->
        <Grid Grid.Column="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Style="{StaticResource HeaderStyle}">Test</TextBlock>
            <mdxam:MarkdownScrollViewer
                Grid.Row="1"
                Background="Crimson"
                Markdown="{Binding Result}" />
        </Grid>
    </Grid>
</UserControl>